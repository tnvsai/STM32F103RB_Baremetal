{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-bootloader",
            "type": "shell",
            "command": "make",
            "args": ["TARGET=bootloader"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build-application",
            "type": "shell",
            "command": "make",
            "args": ["TARGET=application"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": ["clean"]
        }
    ]
}
