{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build application",
            "type": "shell",
            "command": "make",
            "args": ["TARGET=application"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "flash application",
            "type": "shell",
            "command": "make",
            "args": ["TARGET=application", "flash"],
            "group": {
                "kind": "build"
            }
        }
    ]
}
